<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
        x:Class="pr9.MainWindow"
        Title="pr9">
    <StackPanel Orientation="Vertical">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center"></TextBlock>
            <Button Content="Вход" Click="OpenAdminVersion" Width="50" Height="30" Margin="-20 0 0 0"/>
            <Button Content="Ассортимент" Click="OpenNewWindow" Width="120" Height="30" Margin="-10 80 0 10"/>
            <Button Content="Выход" Click="exit" Width="100" Height="30" Margin="0 0 0 10" />
                
        </StackPanel>
    </StackPanel>
        
</Window>

